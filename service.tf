resource "kubernetes_service" "metrics_server" {
  metadata {
    name      = "metrics-server"
    namespace = var.namespace

    labels = {
      k8s-app = "metrics-server"
    }
  }

  spec {
    port {
      name        = "https"
      protocol    = "TCP"
      port        = 443
      target_port = "https"
    }

    selector = {
      k8s-app = "metrics-server"
    }
  }
}